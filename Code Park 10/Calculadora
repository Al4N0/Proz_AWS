


def calculadora():
    num1 = int(input("Digite o primeiro número: "))
    operacao = int(input("Escolha a operação (1 Somar, 2 Subtrair, 3 Multiplicar e 4 Dividir)"))
    num2  = int(input("Digite o segundo numero: "))

    if operacao == 1:
        return num1 + num2
    elif operacao == 2:
        return num1 - num2
    elif operacao == 3:
        return num1 * num2
    elif operacao == 4 and num2 != 0:
        return num1 / num2
    else:
        return "Operação inválida ou divisão por zero"


resultado = calculadora()
print("Resultado:", resultado)






